<ErrorPopup>:
    title: 'Ошибка'
    size_hint: (None, None)
    size: (400, 400)
    auto_dismiss: False
    BoxLayout:
        size_hint: (1, 1)
        orientation: 'vertical'
        padding: [5, 15, 5, 5]
        ScrollView:
            size_hint: (1, 1.8)
            Label:
                text_size: self.width, None
                size_hint: (1, None)
                height: self.texture_size[1]
                text: root.text

        Button:
            size_hint: (0.4, 0.2)
            text: 'ОК'
            on_release: root.dismiss()
